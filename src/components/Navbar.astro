---
import { Image } from "astro:assets";
import logo2 from '../../public/logo2.png';

const navItems = [
    { 
        label: 'Home', 
        href: '/', 
        icon:  `<svg xmlns="http://www.w3.org/2000/svg" class="absolute left-1/2 -translate-x-1/2 group-hover:translate-y-3/4 transition-transform lg:hidden" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M14 2h-4v2H8v2H6v2H4v2H2v2h2v10h7v-6h2v6h7V12h2v-2h-2V8h-2V6h-2V4h-2zm0 2v2h2v2h2v2h2v2h-2v8h-3v-6H9v6H6v-8H4v-2h2V8h2V6h2V4z"/></svg>`
    },
    { 
        label: 'Projects', 
        href: '/projects',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="absolute left-1/2 -translate-x-1/2 group-hover:translate-y-3/4 transition-transform lg:hidden" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M18 2H6v2h12zM4 6h16v2H4zm-2 4h20v12H2zm18 10v-8H4v8z"/></svg>`
    },
    { 
        label: 'About', 
        href: '/about',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="absolute left-1/2 -translate-x-1/2 group-hover:translate-y-3/4 transition-transform lg:hidden" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M9 2H5v4h4zm7 7V7H2v9h2v6h2v-6h2v6h2V9zm-5-7h11v14H11v-2h9V4h-9z"/></svg>`
    },
    { 
        label: 'Contact', 
        href: '/contact',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="absolute left-1/2 -translate-x-1/2 group-hover:translate-y-3/4 transition-transform lg:hidden" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M22 4H2v16h20zM4 18V6h16v12zM8 8H6v2h2v2h2v2h4v-2h2v-2h2V8h-2v2h-2v2h-4v-2H8z"/></svg>`
    },
];

const pathname = new URL(Astro.request.url).pathname;
---
<header>
    <nav class="lg:px-4 w-full flex items-center border-b border-b-[#FF0090]">
        <Image src={logo2} alt="Logo" class="hidden lg:block w-10 h-10 object-contain invert" />
        <div class="w-full flex items-center justify-evenly lg:justify-end gap-4"> 
            {navItems.map(item => (
                <div class="group py-7 relative flex items-center justify-center border-t-2 border-transparent lg:border-t-0 hover:text-[#FF0090] hover:border-b-[#FF0090] cursor-pointer transition-colors ease-linear">
                    <a aria-label={`${item.label} Page`} href={item.href} class={pathname === item.href ? "text-[#FF0090]" : ""} class="relative flex items-center gap-2">
                        <Fragment set:html={item.icon}/>
                        <span class="invisible rounded group-hover:visible group-hover:-translate-y-2/3 lg:group-hover:translate-y-0 transition-all ease-linear lg:visible">{item.label}</span>
                    </a>
                </div>
            ))}
        </div>
    </nav>
</header>